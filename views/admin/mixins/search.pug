mixin search(keyword)
    form(id="form-search")
        .input-group.mb-3
            input(
                type="text"
                name="keyword"
                class="form-control"
                placeholder="Tìm kiếm"
                value=keyword
                )
            .input-group-append
                button(
                    class="btn btn-success"
                    type="submit"
                ) Tìm kiếm