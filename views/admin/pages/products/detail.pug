extends ../../layouts/default.pug

block main
    .container
        .row.mb-4
            .col-md-6
                if product.thumbnail
                    img(
                        src=product.thumbnail
                        class="img-fluid rounded shadow-sm"
                        alt=product.title
                    )
            .col-md-6
                if product.title
                    h1.mb-3 #{product.title}

                if product.price
                    h4.text-muted.mb-3 Giá: 
                    span.text-primary #{product.price}$

                if product.discountPercentage
                    h5.text-muted.mb-3 Giảm giá: 
                    span.text-danger #{product.discountPercentage}%

                if product.stock
                    h5.text-muted.mb-3 Còn lại: 
                    span.text-warning #{product.stock}

                if product.status
                    h5.text-muted.mb-3 Trạng thái: 
                    if product.status === "active"
                        span.badge.badge-success Hoạt động
                    else
                        span.badge.badge-danger Dừng hoạt động

                if product.position
                    h5.text-muted.mb-3 Vị trí:
                    span.badge.badge-info #{product.position}

        .row.mt-4
            .col-md-12
                if product.description
                    h4.mb-3 Mô tả sản phẩm:
                    p.lead !{product.description}
