extends ../../layouts/default.pug

block main
    h1(class="mb-4") Chỉnh sửa nhóm quyền

    form(
        action=`/${ADMIN_PATH}/roles/edit/${roleEdit.id}?_method=PUT`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=roleEdit.title
            )
        div(class="form-group")
            label(for="desc") Mô tả
            input(
                type="text"
                class="form-control"
                id="desc"
                name="description"
                value=roleEdit.description
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật